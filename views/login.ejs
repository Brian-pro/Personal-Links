<!-- Navbar -->
<nav class="navbar">
    <div class="navbar-container">
        <div class="navbar-left-container">
            <a href="/">
                <span class="logo-personal">Personal&nbsp;</span><span class="logo-links">Links</span>
            </a>
        </div>
    </div>
</nav>
<!-- login modal popup -->
<div class="center-form">
    <div class="login-container">
        <div class="modal-header">Login</div>
        <form class="form">
            <div class="input-container">
                <label for="email">Email</label>
                <input class="email" type="text" name="email" placeholder="Email" value="<%= typeof email != 'undefined' ? email : '' %>">
            </div>
            <div class="input-container">
                <label for="password">Password</label>
                <input class="password" type="password" name="password" placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>">
            </div>
            <div class="forgot-pw-container">
                <a href="" class="forgot-pw-link">Forgot your password?</a>
            </div>
            <div class="form-btn-center">
                <button type="submit" class="login-continue-btn">Continue</button>
            </div>
            <div class="create-acc-container">
                Don't have an account?<a href="/users/register" class="create-account-link"> Create account</a>
            </div>
        </form>
    </div>
</div>